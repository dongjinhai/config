""" Map leader to space ---------------------
let mapleader=' '

""" Common settings -------------------------
set nohlsearch
set incsearch
set ignorecase
set smartcase
set showmode
set guicursor=a:blinkon0
set scrolloff=5
set clipboard+=unnamed
" 禁止ideavim的错误提示音
set visualbell
set noerrorbells
" Set cursor shape and color
" INSERT mode
let &t_SI = "\<Esc>[6 q" . "\<Esc>]12;blue\x7"
" REPLACE mode
let &t_SR = "\<Esc>[3 q" . "\<Esc>]12;black\x7"
" NORMAL mode
let &t_EI = "\<Esc>[2 q" . "\<Esc>]12;green\x7"

""" Plugins  -------------------------------
set surround
set commentary
set argtextobj
set ReplaceWithRegister
set exchange
set textobj-entire
set highlightedyank
set vim-paragraph-motion
set matchit

""" Plugin settings -------------------------
let g:argtextobj_pairs="[:],(:),<:>"
let g:highlightedyank_highlight_duration = "350"

""" Idea specific settings ------------------
set ideamarks
set ideajoin
" set ideastatusicon=gray
set idearefactormode=keep

map Q gq

inoremap <C-j> <Down>
inoremap <C-k> <Up>
nnoremap H ^
nnoremap L $
nnoremap J 5<Down>
nnoremap K 5<Up>
vnoremap H ^
vnoremap L $
vnoremap J 5<Down>
vnoremap K 5<Up>

nnoremap <leader>sc :nohlsearch<CR>
nnoremap <leader>fs :w<CR>
