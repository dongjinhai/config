""" Map leader to space ---------------------
let mapleader=" "

""" Plugins  --------------------------------
set surround
set multiple-cursors
set commentary
set argtextobj
set exchange
" set easymotion
set textobj-entire
set ReplaceWithRegister
set highlightedyank
set vim-paragraph-motion
set matchit
" 开启输入法自动切换功能, 回到insert模式时恢复输入法, 需要安装ideavimextension插件才能生效
set keep-english-in-normal-and-restore-in-insert
" 设置insert模式使用到的非英文输入法id, 输入法id可以使用im-select来查询
let keep_input_source_in_insert=2052
" 设置normal模式使用到的输入英文输入法id
let keep_input_source_in_normal=1033

""" Plugin settings -------------------------
let g:argtextobj_pairs="[:],(:),<:>"
let g:highlightedyank_highlight_duration = "350"

""" Common settings -------------------------
set nohlsearch
set incsearch
set ignorecase
set smartcase
set showmode
set scrolloff=3
set guicursor=a:blinkon0
set surround
set argtextobj
set commentary
set sneak
set clipboard+=unnamed
set visualbell

""" Idea specific settings ------------------
set ideamarks
set ideajoin
" set ideastatusicon=gray
set idearefactormode=keep

" Don't use Ex mode, use Q for formatting.
map Q gq

inoremap <C-j> <Down>
inoremap <C-k> <Up>
nnoremap H ^
nnoremap L $
nnoremap J 5<Down>
nnoremap K 5<up>
vnoremap H ^
vnoremap L $
vnoremap J 5<Down>
vnoremap K 5<up>

nnoremap <leader>sc :nohlsearch<CR>
nnoremap <leader>fs :w<CR>
